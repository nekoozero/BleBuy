.header{
  border-bottom: 2px #666 solid;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
}
.body{
  margin:20rpx 0 0 20rpx;
  height:50vh;
  display: flex;
  flex-direction: column;
